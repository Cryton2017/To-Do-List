<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag "main.css" %>
    <%= stylesheet_link_tag "newItem.css" %>
    <%= stylesheet_link_tag "home.css" %>
  </head>
  <body>
    <% if current_user %>
      <div class='header'>
        <div class="left">
          <h2>Todo List</h2>
        </div>
        <div class="right">
          <p>Logged in as <%= current_user.email %>.</p>
          <%= button_to "Log Out", logout_path, method: :get, :class => "logoutBTN" %>
        </div>
      </div>
      <div class='content'>
        <div class='newItemCont'>
          <h1>New Item</h1>
          <%= render 'form', to_do: @to_do %>
          <%= button_to 'Back', dashboard_path, method: :get, :class => 'navBTN' %>
        </div>
      </div>
    <% else %>
      <div class='header'>
        <div class="left">
          <h2>Todo List</h2>
        </div>
        <div class="right"></div>
      </div>
      <div class='content'>
        <div class='buttons'>
          <%= button_to "Sign Up", signup_path, method: :get, :class => 'appBTNs' %>
          <%= button_to "Log In", login_path, method: :get, :class => 'appBTNs' %>
        </div>
      </div>
    <% end %>
  </body>
</html>


